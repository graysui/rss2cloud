{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RSS2Cloud",
  "version": "0.1.0",
  "identifier": "com.rss2cloud.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RSS2Cloud",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "© 2024",
    "category": "Utility",
    "shortDescription": "RSS to 115 Cloud Downloader",
    "longDescription": "将 RSS 订阅离线下载到 115 网盘的桌面客户端"
  }
}
